# BLinkOS Platform Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.bl1nk.site/v1
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# BLink API Keys
BLINK_API_KEY=your-blink-api-key-here
BLINK_CLIENT_ID=your-client-id
BLINK_CLIENT_SECRET=your-client-secret

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Feature Flags
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AGENTS=true

# Application Settings
NEXT_PUBLIC_APP_NAME=BLinkOS
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@bl1nk.site

# Client-side analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info
ENABLE_API_LOGGING=true

# Monitoring & Analytics
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
